@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Tourfirm.Domain.Entity.Country;

@{
    ViewBag.Title = "Update country";
    Layout = "_Layout";
}
<html lang="en">
<script type="text/javascript" charset="utf-8" id="zm-extension" src="chrome-extension://cnhbkkedmelfmalgjpkngiaoifpdfcnl/scripts/webrtc-patch.js" async=""></script>

<head>
    <meta charset="UTF-8">
    <title>Country update</title>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>

    <form asp-controller="Country" asp-action="CountryUpdate" method="post" enctype="multipart/form-data">
        <div class="alert alert-danger" asp-validation-summary="All"></div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputName"> Name </label>
                <input type="text" class="form-control" value="@Model.Name" id="inputName" asp-for="Name" placeholder="England, Germany, USA" />
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group col-md-6">
                <label for="inputLanguage"> Language </label>
                <input type="text" class="form-control" value="@Model.Language" id="inputLanguage" asp-for="Language" placeholder="English, German, American English" />
                <span asp-validation-for="Language"></span>
            </div>
            <div class="form-group col-md-6">
                <label for="inputClimate"> Climate </label>
                <input type="text" class="form-control" value="@Model.Climate" id="inputClimate" asp-for="Climate" placeholder="Sub-tropical, Tropical" />
                <span asp-validation-for="Climate"></span>
            </div>
            <div class="form-group col-md-6">
                <label for="inputMidTemp"> MidTemp </label>
                <input type="number" step="0.1" value="@Model.MidTemp" class="form-control" id="inputMidTemp" asp-for="MidTemp" placeholder="18.2, 11.2, -9.0" />
                <span asp-validation-for="MidTemp"></span>
            </div>

        </div>
        <div class="container-fluid" style="margin-top: 1em">
            <button type="submit" class="btn btn-primary">Update Country</button>
        </div>
    </form>

</body>
</html>