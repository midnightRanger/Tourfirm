@model Tourfirm.Domain.Entity.Country

@{
    ViewBag.Title = "Delete Country confirmation";
    Layout = "_Layout";
}
<body class="bg-light">
<div class="container-fluid position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 fw-normal">Are you sure?</h1>
        <p class="lead fw-normal">You want to delete a Country "@Model.Name" </p>
         <div style="margin-bottom: 1em">
            <a asp-action="CountryDelete" asp-controller="Country" asp style="width:100%; padding: 10px;"  asp-route-id="@Model.Id" class="btn btn-danger"> Delete </a>
        </div>
        <form asp-action="CountryIndex" asp-controller="Country" method="get">
            <input type="submit" style="width:100%; padding: 10px;" value="Back" class="btn btn-primary padding-md"/>
        </form>
    </div>
</div>
</body>
