@model IEnumerable<Tourfirm.Domain.Entity.Country>

@{
    ViewBag.Title = "Countries";
    Layout = "_Layout";
}

@if (!ViewData.ModelState.IsValid)
{
  <div class="validation alert alert-info mb-md-5 padding-md" asp-validation-summary="All"></div>
}
<table class="table">
  <thead>
  <tr>
    <th scope="col"> <a asp-action="CountryIndex" asp-controller="Country" asp-country-sortCountry="@ViewBag.IdSort"> ID </a> </th>
    <th scope="col">Name</th>
    <th scope="col">Language</th>
    <th scope="col">Midtemp</th>
    <th scope="col">Climate</th>
    <th scope="col">Delete</th>
    <th scope="col">Update</th>
  </tr>
  </thead>
  <tbody>
  @foreach (var item in Model)
  {
    <tr>
      <th scope="row">@item.Id</th>
      <td>@item.Name</td>
      <td>@item.Language</td>
      <td>@item.MidTemp</td>
      <td>@item.Climate</td>
      <td><a asp-action="RouteDeleteConfirm" asp-controller="Route" asp-route-id="@item.Id">Delete</a></td>
      <td><a asp-action="RouteUpdate" asp-controller="Route" asp-route-id="@item.Id">Update</a></td>
    </tr>
  }
  </tbody>
</table>

<form asp-action="RouteAdd" method="get"  asp-controller="Route">
<div class="container-fluid">
  <input type="submit" value="Add country" class="btn btn-primary" style="width:100%"/>
</div>
</form>

