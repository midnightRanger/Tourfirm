@model IEnumerable<Tourfirm.Domain.Entity.Country>

@{
    ViewBag.Title = "Countries";
    Layout = "_Layout";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="validation alert alert-info mb-md-5 padding-md" asp-validation-summary="All"></div>
}
<table class="table">
    <thead>
        <tr>
            <th scope="col"> <a asp-action="CountryIndex" asp-controller="Country" asp-route-sortCountry="@ViewBag.IdSort"> ID </a> </th>
            <th scope="col"> <a asp-action="CountryIndex" asp-controller="Country" asp-route-sortCountry="@ViewBag.NameSort"> Name </a> </th>
            <th scope="col"><a asp-action="CountryIndex" asp-controller="Country" asp-route-sortCountry="@ViewBag.LanguageSort"> Language </a></th>
            <th scope="col"><a asp-action="CountryIndex" asp-controller="Country" asp-route-sortCountry="@ViewBag.MidTempSort"> Mid temp </a></th>
            <th scope="col"><a asp-action="CountryIndex" asp-controller="Country" asp-route-sortCountry="@ViewBag.ClimateSort"> Climate </a></th>
            <th scope="col">Delete</th>
            <th scope="col">Update</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Name</td>
                <td>@item.Language</td>
                <td>@item.MidTemp</td>
                <td>@item.Climate</td>
                <td><a asp-action="CountryDeleteConfirm" asp-controller="Country" asp-route-id="@item.Id">Delete</a></td>
                <td><a asp-action="CountryUpdate" asp-controller="Country" asp-route-id="@item.Id">Update</a></td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="CountryAdd" method="get" asp-controller="Country">
    <div class="container-fluid">
        <input type="submit" value="Add country" class="btn btn-primary" style="width:100%" />
    </div>
</form>

