@model Tourfirm.Domain.Entity.Tour

@{
    ViewBag.Title = "Delete Tour confirmation";
    Layout = "_Layout";
}
<body class bg-light>
<div class="container-fluid position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
        <h1 class="display-4 fw-normal">Are you sure?</h1>
        <p class="lead fw-normal">You want to delete a beatiful "@Model.Name"... </p>
    
       
            <a asp-action="TourDelete" asp-controller="Tour" asp style="width:100%; padding: 10px;"  asp-route-id="@Model.Id" class="btn btn-danger"> Delete </a>
        
    
        <form asp-action="TourIndex" asp-controller="Tour" method="get">
            <input type="submit" style="width:100%; padding: 10px;" value="Back" class="btn btn-primary padding-md"/>
        </form>
    </div>
</div>
</body>
