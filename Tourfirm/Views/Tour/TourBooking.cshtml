<body>
    <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>

    <div class="text-center">
        <h3 class="display-1"> Бронирование</h3>
    </div>

    <hr />
    <div class="card shadow-lg p-3 mb-5 rounded">
        <div class="container border rounded p-3">
            <p><span class="fw-bold text-dark">Наименование тура:</span> <span class="text-muted">@Model.Tour.Name</span></p>
            <p><span class="fw-bold text-dark">Описание:</span> <span class="text-muted">@Model.Tour.Description</span></p>
            <p><span class="fw-bold text-dark">Цена:</span> <span class="text-muted">@Model.Tour.Cost</span></p>
        </div>
        <form asp-action="TourBookingServiceAdd" asp-controller="Tour" class="col border rounded p-3">
            <label for="inputService" class="form-label"> Услуги </label>
            <div class="d-flex flex-wrap gap-3">
                <div class="form-group col-md-6">
                    <select id="inputService" name="serviceId" asp-for="ServiceId" class="form-control" asp-items="@Model.AllService"></select>
                </div>

                <div>
                    <button type="submit" class="btn btn-primary margin-md w-100">Добавить услугу</button>
                </div>

            </div>


            @if (Model.SelectedServices.Count != 0)
            {
                <div class="d-flex flex-wrap gap-3">
                    @foreach (var service in Model.SelectedServices)
                    {
                        <div class="card" style="margin-top: 0.5em">
                            <div class="card-header">
                                Service:
                            </div>
                            <div class="card-body">
                                <p class="card-text"> @service.Name - @service.Cost</p>
                                <a asp-action="TourBookingServiceRemove" asp-controller="Tour" asp-route-id="@service.Id" style="padding: 10px; width: 100%" class="btn btn-danger"> Delete </a>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div>
                    Выберите дополнительные услуги выше
                </div>
            }

            <p class="lead">Итоговая цена за услуги: @Model.TotalServiceCost </p>
        </form>
        <form class="col border rounded p-3" asp-action="OrderConfirm" asp-controller="Order">

            <label for="arrivalInput" class="form-label"> Время прибытия </label>
            <input type="date" id="arrivalInput" name="ArrivalTime" asp-for="ArrivalTime" class="form-control">

            <div class="row">
                <div class="col">
                    <label for="inputSleepingPlaceValue" class="form-label"> Число спальных мест </label>
                    <label id="costLabel" class="form-label text-muted" asp-for="CostForBed">
                        (за место: @Model.CostForBed)
                    </label>
                    <input type="number" id="inputSleepingPlaceValue" name="SleepingPlaceValue" asp-for="SleepingPlaceValue" min="1" max="10" class="form-control">
                </div>
            </div>

            <h4 class="display-4" id="costForPlaces"> Итоговая цена за место: </h4>
            <div class="col">
                <div style="margin-top: 1em">
                    <button type="submit" class="btn btn-primary margin-md w-100">Забронировать</button>
                </div>
            </div>
        </form>
    </div>

