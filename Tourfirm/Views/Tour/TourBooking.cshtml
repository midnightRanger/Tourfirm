@model Tourfirm.Domain.ViewModels.TourBookingViewModel

@{
    ViewBag.Title = "Tour Booking";
    Layout = "_Layout";
}
<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

