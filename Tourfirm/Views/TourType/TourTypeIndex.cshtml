@model IEnumerable<Tourfirm.Domain.Entity.TourType>

@{
    ViewBag.Title = "Tour types";
    Layout = "_Layout";
}

@if (!ViewData.ModelState.IsValid)
{
  <div class="validation alert alert-info mb-md-5 padding-md" asp-validation-summary="All"></div>
}
<table class="table">
  <thead>
  <tr>
    <th scope="col"> <a asp-action="TourTypeIndex" asp-controller="TourType" asp-route-sortTourType="@ViewBag.IdSort"> ID </a> </th>
    <th scope="col"> <a asp-action="TourTypeIndex" asp-controller="TourType" asp-route-sortTourType="@ViewBag.NameSort"> Name </a> </th>
  </tr>
  </thead>
  <tbody>
  @foreach (var item in Model)
  {
    <tr>
      <th scope="row">@item.Id</th>
      <td>@item.Name</td>

      <td><a asp-action="TourTypeDeleteConfirm" asp-controller="TourType" asp-route-id="@item.Id">Delete</a></td>
      <td><a asp-action="TourTypeUpdate" asp-controller="TourType" asp-route-id="@item.Id">Update</a></td>
    </tr>
  }
  </tbody>
</table>

<form asp-action="TourTypeAdd" method="get"  asp-controller="TourType">
<div class="container-fluid">
  <input type="submit" value="Add new tour type" class="btn btn-primary" style="width:100%"/>
</div>
</form>

