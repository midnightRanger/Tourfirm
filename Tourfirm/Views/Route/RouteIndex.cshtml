@model IEnumerable<Tourfirm.Domain.Entity.Route>

@{
    ViewBag.Title = "Routes";
    Layout = "_Layout";
}

@if (!ViewData.ModelState.IsValid)
{
  <div class="validation alert alert-info mb-md-5 padding-md" asp-validation-summary="All"></div>
}
<table class="table">
  <thead>
  <tr>
    <th scope="col"> <a asp-action="RouteIndex" asp-controller="Route" asp-route-sortRoute="@ViewBag.IdSort"> ID </a> </th>
    <th scope="col">Start Position</th>
    <th scope="col">End Position</th>
    <th scope="col">Hours</th>
    <th scope="col">Type</th>
    <th scope="col">Delete</th>
    <th scope="col">Update</th>
  </tr>
  </thead>
  <tbody>
  @foreach (var item in Model)
  {
    <tr>
      <th scope="row">@item.Id</th>
      <td>@item.StartPos</td>
      <td>@item.EndPost</td>
      <td>@item.Hours</td>
      <td>@item.Type</td>

      <td><a asp-action="RouteDeleteConfirm" asp-controller="Route" asp-route-id="@item.Id">Delete</a></td>
      <td><a asp-action="RouteUpdate" asp-controller="Route" asp-route-id="@item.Id">Update</a></td>
    </tr>
  }
  </tbody>
</table>

<div style="width:100%">
  <a  class="btn btn-primary" asp-action="RouteAdd" asp-controller="Route" > Add new route </a>
</div>

