@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Tourfirm.Domain.Entity.Route;

@{
    ViewBag.Title = "Route Update";
    Layout = "_Layout";
}
<html lang="en">
<script type="text/javascript" charset="utf-8" id="zm-extension" src="chrome-extension://cnhbkkedmelfmalgjpkngiaoifpdfcnl/scripts/webrtc-patch.js" async=""></script>

<head>
    <meta charset="UTF-8">
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>

    <form asp-controller="Route" asp-action="RouteUpdate" method="post" enctype="multipart/form-data">
        <div class="alert alert-danger" asp-validation-summary="All"></div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputStartPos"> Start position </label>
                <input type="text" class="form-control" id="inputStartPos" value="@Model.StartPos" asp-for="StartPos" placeholder="Moscow, Saint-Petersburg" />
                <span asp-validation-for="StartPos"></span>
            </div>
            <div class="form-group col-md-6">
                <label for="inputEndPost"> End position </label>
                <input type="text" class="form-control" id="inputEndPost" value="@Model.EndPost" asp-for="EndPost" placeholder="Brasil, Jerusalem, New-York" />
                <span asp-validation-for="EndPost"></span>
            </div>
            <div class="form-group col-md-6">
                <label for="inputHours"> Hours </label>
                <input type="number" class="form-control" id="inputHours" value="@Model.Hours" asp-for="Hours" placeholder="11, 25, 5" />
                <span asp-validation-for="Hours"></span>
            </div>
            <div class="form-group col-md-6">
                <label for="inputHours"> Type </label>
                <input type="text" class="form-control" id="inputType" value="@Model.Type" asp-for="Type" placeholder="Plane, train, subway" />
                <span asp-validation-for="Type"></span>
            </div>

        </div>
        <div class="container-fluid">
            <button type="submit" class="btn btn-primary margin-md">Update Route</button>
        </div>
    </form>

</body>
</html>