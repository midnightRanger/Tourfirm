@model Tourfirm.DAL.ViewModels.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<script type="text/javascript" charset="utf-8" id="zm-extension" src="chrome-extension://cnhbkkedmelfmalgjpkngiaoifpdfcnl/scripts/webrtc-patch.js" async=""></script>
<head>
    <title>Login </title>
    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/sign-in/">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="~/css/signin.css" rel="stylesheet">
</head>
<body class="text-center">
<div class="d-flex flex-column align-items-center justify-content-center vh-100">
<div class="container text-center">
    <div class="my-2">
        <div class="d-flex justify-content-center align-items-center gap-3">
            <h1 class="display-5 fw-bold m-0">Оформление путевок</h1>
            <img src="https://cdn.onlinewebfonts.com/svg/download_40112.png" alt="" width="72" height="72">
        </div>
    </div>
</div>  

 <div class="form-signin w-100" style="max-width: 400px;">
<form class="form-signin" method="post" asp-action="Login" asp-controller="Auth">
    <p class="text-muted lead mt-2">Пожалуйста, авторизуйтесь:</p>
    <div asp-validation-summary="All"></div>

    <label for="inputEmail" class="sr-only">Электронная почта</label>
    <input type="email" id="inputEmail" asp-for="Email" class="form-control" placeholder="Email address" required="" autofocus="">
    <label for="inputPassword" class="sr-only">Пароль</label>
    <input type="password" asp-for="Password" id="inputPassword" class="form-control" placeholder="Password" required="">
    <input style="width: 100%; margin-bottom: 10px;" class="btn btn-lg btn-primary btn-block" type="submit" value="Войти"/>
    
        <p class="text-center mt-3">
    Нет аккаунта? 
    <a asp-action="Register" asp-controller="Auth" class="fw-bold text-primary text-decoration-none">
        Зарегистрируйтесь
    </a>
</p>
   </form> 
</div>

    <p class="mt-5 mb-3 text-muted">© Tourfirm "Heaven on Earth" - 2025</p>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</div>
</body>
</html>