@model Tourfirm.DAL.ViewModels.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<script type="text/javascript" charset="utf-8" id="zm-extension" src="chrome-extension://cnhbkkedmelfmalgjpkngiaoifpdfcnl/scripts/webrtc-patch.js" async=""></script>
<head>
    <title>Register page</title>
    <link rel="canonical" href="https://getbootstrap.com/docs/4.0/examples/sign-in/">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="~/css/signin.css" rel="stylesheet">
</head>
<body class="text-center">
<form class="form-signin" method="post" asp-action="Register" asp-controller="Auth">
    <img class="mb-4" src="https://cdn.onlinewebfonts.com/svg/download_40112.png" alt="" width="72" height="72">
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <div asp-validation-summary="All"></div>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="inputEmail" asp-for="Email" class="form-control" placeholder="Email address" required="" autofocus="">
    <span asp-validation-for="Email"></span>
    <label for="inputLogin" class="sr-only">Login </label>
    <input type="text" id="inputLogin" asp-for="Login" class="form-control" placeholder="Login" required="" autofocus="">
     <span asp-validation-for="Login"></span>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" asp-for="Password" id="inputPassword" class="form-control" placeholder="Password" required="">
     <span asp-validation-for="Password"></span>
    <label for="inputPasswordConfirm" class="sr-only">Confirm password</label>
    <input type="password" asp-for="PasswordConfirm" id="inputPasswordConfirm" class="form-control" placeholder="Repeat your Password here" required="">
    <span asp-validation-for="PasswordConfirm"></span>
    <label for="inputName" class="sr-only">Name</label>
    <input type="text" id="inputName" asp-for="Name" class="form-control" placeholder="Name" required="" autofocus="">
    <span asp-validation-for="Name"></span>
    <label for="inputSurname" class="sr-only">Surname</label>
    <input type="text" id="inputSurname" asp-for="Surname" class="form-control" placeholder="Surname" required="" autofocus="">
     <span asp-validation-for="Surname"></span>
    <label for="inputAge" class="sr-only">Age</label>
    <input type="number" id="inputAge" asp-for="Age" class="form-control" placeholder="Put your age between 18 and 100" required="" autofocus="">
     <span asp-validation-for="Age"></span>
    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Register"/>
    <p class="mt-5 mb-3 text-muted">Â© Tourfirm "Heaven on Earth" - 2025</p>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</form>
</body>
</html>